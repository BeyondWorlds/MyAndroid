<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#0000ff" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#00ff00" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#ff0000" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>